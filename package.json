{
  "name": "time-a-productivity-streak-builder",
  "displayName": "Time: A Streak & Productivity Habit Builder",
  "description": "Local-first coding time tracker with streaks, stopwatch, and Pomodoro sessions.",
  "publisher": "BuddyTools",
  "icon": "media/icon.png",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "*",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "time-a-productivity-streak-builder.openStopwatch",
        "title": "Time Streak Builder: Open Stopwatch"
      },
      {
        "command": "time-a-productivity-streak-builder.openPomodoro",
        "title": "Time Streak Builder: Open Pomodoro"
      },
      {
        "command": "time-a-productivity-streak-builder.markProjectComplete",
        "title": "Time Streak Builder: Mark Project Complete"
      },
      {
        "command": "time-a-productivity-streak-builder.resetStats",
        "title": "Time Streak Builder: Reset Stats"
      }
    ],
    "configuration": {
      "title": "Time Streak Builder",
      "properties": {
        "timeStreakBuilder.pomodoro.focusMinutes": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "description": "Pomodoro focus duration (minutes)"
        },
        "timeStreakBuilder.pomodoro.breakMinutes": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "description": "Pomodoro break duration (minutes)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.107.0",
    "typescript": "^5.4.0"
  }
}
